<%- include('partials/header'); -%>

    <h1>Compose</h1>

    <form action="/compose" method="POST">
        <div class="form-group">
            <label>Title</label>
            <input type="text" class="form-control" name="blogTitle" placeholder="hello">
            <label>Post</label>
            <textarea class="form-control" name="blogContent" placeholder="world" rows="5" cols="30"></textarea>
        </div>
        <button class="btn btn-primary" type="submit" name="button">Publish</button>
    </form>


